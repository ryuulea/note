Public Sub DebugDeleteLoop()

    Dim wsMail As Worksheet
    Dim lastMail As Long, i As Long
    Dim fnum As Integer, filePath As String
    
    Set wsMail = Worksheets("メール本文テンプレート情報")
    lastMail = wsMail.Cells(wsMail.Rows.Count, "A").End(xlUp).Row
    
    filePath = ThisWorkbook.Path & "\debug_delete.txt"
    fnum = FreeFile
    Open filePath For Output As #fnum
    
    For i = 11 To lastMail
        If wsMail.Cells(i, 4).Value = "削除" Then
            Print #fnum, "行:" & i & " 削除 → E=" & wsMail.Cells(i, 5).Value & " F=" & wsMail.Cells(i, 6).Value & " G=" & wsMail.Cells(i, 7).Value
        End If
    Next i
    
    Close #fnum
    MsgBox "Debug 输出完成: " & filePath

End Sub
