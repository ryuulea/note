lines = Split(txt, vbLf)   ' 改行ごとに分割
For lineNo = LBound(lines) To UBound(lines)
    oneLine = lines(lineNo)
    For i = 1 To Len(oneLine)
        c = Mid(oneLine, i, 1)
        If c <> sQuestion And Asc(c) <> Asc(sQuestion) Then
            cp = AscW(c)
            Debug.Print c & " ：文字コード=" & Hex(cp)
            Worksheets("チェック結果").Range("E" & exportRowNo).Value = c
            Worksheets("チェック結果").Range("F" & exportRowNo).Value = _
                "表行:" & r & " / 正文行:" & (lineNo + 1) & " / 文字コード: " & Hex(cp)
            exportRowNo = exportRowNo + 1
        End If
    Next i
Next lineNo


lines = Split(txt, vbLf)   ' 改行ごとに分割
For lineNo = LBound(lines) To UBound(lines)
    oneLine = lines(lineNo)
    For i = 1 To Len(oneLine)
        c = Mid(oneLine, i, 1)
        If c <> sQuestion And Asc(c) <> Asc(sQuestion) Then
            cp = AscW(c)
            Debug.Print c & " ：文字コード=" & Hex(cp)

            ' 出力：問題文字
            Worksheets("チェック結果").Range("E" & exportRowNo).Value = c
            ' 出力：表格行号 + 正文行号 + Unicode
            Worksheets("チェック結果").Range("F" & exportRowNo).Value = _
                "表行: " & r & " / 正文行: " & (lineNo + 1) & " / コード: U+" & Hex(cp)

            exportRowNo = exportRowNo + 1
        End If
    Next i
Next lineNo
